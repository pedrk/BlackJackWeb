
@{
    ViewData["Title"] = "BlackJack";
}

<h1>Jogo BlackJack</h1>
<br />
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <h3>
                Jogador 1
            </h3>
            <br /><br />
            <img alt="carta1" src="/images/0.png" height="350" width="250" name="cartas1" id="cartas1">
            <br /><br />
            <button type="button" class="btn btn-success" name="btn_jogador_1" id="btn_jogador_1" onclick="jogada(true)" disabled>
                Jogar
            </button>
            <button type="button" class="btn btn-success" name="btn_parar_1" id="btn_parar_1" onclick="parar1()" disabled>
                Parar
            </button>
        </div>
        <div class="col-md-4">
            <h3>
                Partida
            </h3>
            <br /><br />
            <button type="button" class="btn btn-success" name="btn_iniciar" id="btn_iniciar" onclick="iniciar()">
                Iniciar
            </button>
            <button type="button" class="btn btn-success" name="btn_reiniciar" id="btn_reiniciar" onclick="reiniciar()" disabled>
                Reiniciar
            </button>
            <br /><br />
            <div class="row">
                <div class="col-md-4">
                    <label class="badge badge-default" id="jogador1">0</label>
                </div>
                <div class="col-md-4">
                    <label class="badge badge-default">X</label>
                </div>
                <div class="col-md-4">
                    <label class="badge badge-default" id="jogador2">0</label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label class="badge badge-default" id="resultadoFinal"></label>
                </div>
            </div>
        </div>
        <div class="col-md-4">

            <h3>
                Jogador 2
            </h3>
            <br /><br />
            <img alt="carta2" src="/images/0.png" height="350" width="250" name="cartas2" id="cartas2">
            <br /><br />
            <button type="button" class="btn btn-success" name="btn_jogador_2" id="btn_jogador_2" onclick="jogada(false)" disabled>
                Jogar
            </button>
            <button type="button" class="btn btn-success" name="btn_parar_2" id="btn_parar_2" onclick="parar2()" disabled>
                Parar
            </button>

        </div>
    </div>
</div>